[flake8]
max-line-length = 100
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# F541: f-string without placeholders (non-critical style issue)
# E501: line too long (already at 100, some unavoidable)
# E402: module level import not at top of file (sometimes necessary)
# E303: too many blank lines (style only)
# W605: invalid escape sequence (to fix later)
# E741: ambiguous variable name (only 1 occurrence)
# E302: expected 2 blank lines (style only)
# F841: local variable assigned but never used (non-critical)
# F811: redefinition of unused (non-critical)
# W391: blank line at end of file (style only)
extend-ignore = E203, W503, F541, E501, E402, E303, W605, E741, E302, F841, F811, W391
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    database/migrations,
    _bmad,
    _bmad-output,
    n8n-workflows
per-file-ignores =
    __init__.py:F401
    tests/**/*.py:F401
    tests/*.py:F401
